<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Burger Menu</h2>
            {{#each burgers}} 
                {{#unless devoured}}
                <form action="/{{this.id}}?_method=updateOne" method="POST">
                    <p>{{this.id}}. {{this.burger_name}}
                    <button type="submit" class="btn btn-danger btn-xs" id="devour">Devour</button>
                    </p>
                </form>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-8">
            <img src="/assets/img/hammie.png" width="200">
            <h2>Eat-Da-Burger!</h2>
            <form class="create-form" method = "POST" action = "/">
                <div class="form-group">
                    <label for="name">Burger Name:</label>
                    <input type="type" id="type" name="burger_name">
                </div>
                <button type="submit" class="btn btn-danger btn-xs" id ="submit">Submit</button>
            </form>
        </div>
    </div>

</div>